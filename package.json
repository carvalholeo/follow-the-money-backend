{
  "name": "follow-the-money",
  "version": "1.0.0",
  "description": "Package made in TypeScript, using Express, Node, and Knex, for personal financial control.",
  "main": "dist/src/server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --coverage",
    "start": "cross-env NODE_ENV=production nodemon dist/src/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --transpileOnly --ignore-watch node_modules src/server.ts",
    "build": "tsc --removecomments --types --outDir dist/",
    "knex:latest": "knex --knexfile knexfile.ts migrate:latest",
    "knex:rollback": "knex --knexfile knexfile.ts migrate:rollback",
    "knex:seed": "knex --knexfile knexfile.ts seed:run"
  },
  "keywords": [
    "financial control",
    "money",
    "api"
  ],
  "author": "Leo Carvalho",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^12.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.0",
    "log4js": "^6.3.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "speakeasy": "^2.0.0",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.3",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^7.0.2",
    "@types/speakeasy": "^2.0.5",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  }
}
